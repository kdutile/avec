<p style="color: green"><%= notice %></p>

<% if user_signed_in? %>
  <h1>Events</h1>

  <div id="events">
    <% @events.each do |event| %>
      <%= render event %>
      <p>
        <%= link_to "Show this event", event %>
      </p>
    <% end %>
  </div>

  <%= link_to "New event", new_event_path %>
<% else %>
  <h1>Welcome!</h1>
  <p>Please sign up or log in to continue.</p>
<% end %>
